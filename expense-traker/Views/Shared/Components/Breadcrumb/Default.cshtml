@model List<expense_traker.ViewComponents.BreadcrumbItem>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb my-custom-breadcrumb">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i == Model.Count - 1)
            {
                <li class="breadcrumb-item active my-custom-breadcrumb-item" aria-current="page">@Model[i].Name</li>
            }
            else
            {
                <li class="breadcrumb-item my-custom-breadcrumb-item"><a href="@Model[i].Url">@Model[i].Name</a></li>
            }
        }
    </ol>
</nav>



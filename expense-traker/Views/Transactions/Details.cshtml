@model expense_traker.Models.Transaction

@{
    ViewData["Title"] = "Dettagli Transazione";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <!--Card-->
            <div class="card">
                <!--Card Header -->
                <div class="card-header">
                    <h2>@Model.Category.TitleWithIcon</h2>
                </div>
                <!--Card Body -->
                <div class="card-body">
                    <div class="row">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Category)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Category.TitleWithIcon)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Amount)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Amount)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Note)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Note)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>
                            <dd class="col-sm-10">
                                @* @Html.DisplayFor(model => model.Date) *@
                                @Model.FormattedDate
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="">
                        <a asp-action="Index" class="btn btn-danger">Torna alla lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



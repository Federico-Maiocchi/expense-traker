@model expense_traker.Models.Category

@{
    ViewData["Title"] = "Dettagli Categoria";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <!--Card-->
            <div class="card">
                <!--Card Header -->
                <div class="card-header">
                    <h2>@Model.Title</h2>
                </div>
                <!--Card Body -->
                <div class="card-body">                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="col-md-8 d-flex">
                                <div>
                                    @Html.DisplayNameFor(model => model.Icon) : 
                                </div>
                                <div>
                                    @Model.Icon
                                </div>
                            </div>
                            <div class="col-md-8 d-flex">
                                <div>
                                    @Html.DisplayNameFor(model => model.Type) :
                                </div>
                                <div>
                                    @Model.Type
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="">
                        <a asp-action="Index" class="btn btn-danger">Torna alla lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

